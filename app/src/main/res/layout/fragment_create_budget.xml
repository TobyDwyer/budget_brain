<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CreateBudgetFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/budgetNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Budget Name"
            android:minHeight="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/budgetAmountEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:minHeight="48dp"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@id/budgetNameEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/startDateEditText"
            android:layout_width="0dp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:hint="Start Date"
            app:layout_constraintTop_toBottomOf="@id/budgetAmountEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/endDateEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="End Date"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/startDateEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Add recyclerView for categories and amounts -->

        <Button
            android:id="@+id/createBudgetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Budget"
            app:layout_constraintTop_toBottomOf="@id/endDateEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
